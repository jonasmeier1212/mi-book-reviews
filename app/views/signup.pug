extends _layout.pug

block head
  title Registrierung

block content
  .row.my-auto
    .col-md-6.cold-md-offset-3.mx-auto
      .card
        .card-body
          .card-title Registrieren

          if errors
            ul
              for error in errors
                li.text-danger!= error

          form(method="POST", action="/users/signup")
            div.form-group
              label(for="username") Username:
              input#name.form-control(type="text", name="username")
            div.form-group
              label(for="email") Email:
              input#email.form-control(type="email", placeholder="name@email.com", name="email")
            div.form-group
              label(for="pw") Password:
              input#pw.form-control(type="password", name="password")
            div.form-group
              label(for="pw2") Repeat password:
              input#pw2.form-control(type="password", name="confirmPassword")
            button.btn.btn-primary(type="submit") Create account
