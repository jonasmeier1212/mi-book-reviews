extends _layout.pug

block head
  title Registrierung

block content
  .row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Registrieren

      if errors
        ul
          for error in errors
            li!= error

      form(method="POST", action="/user")
        div.form-group
          label(for="username") Benutzername:
          input#name.form-control(type="text", name="username")
        div.form-group
          label(for="email") Email:
          input#email.form-control(type="email", placeholder="name@email.com", name="email")
        div.form-group
          label(for="pw") Passwort:
          input#pw.form-control(type="password", name="password")
        div.form-group
          label(for="pw2") Passwort best√§tigen:
          input#pw2.form-control(type="password", name="confirmPassword")
        button.btn.btn-primary(type="submit") Registrieren
